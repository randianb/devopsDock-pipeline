    dest: /tmp/vault_info.txt
    mode: '0644'

- name: Read Vault configuration from file
  become: true
  slurp:
    src: /tmp/vault_info.txt
  register: vault_info_file

- name: Extract Vault Configuration (Role ID, Secret ID, URL, and Namespace)
