  become: true
  command: >
    curl --request POST --data '{"role_id": "{{ vault_role_id }}", "secret_id": "{{ vault_secret_id }}"}' 
    {{ vault_url }}/v1/myVault/{{ vault_namespace }}/auth/approle/login
