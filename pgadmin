#!/bin/bash

# SMTP Configuration
SMTP_HOST="smtp-goss.int.world.socgen"
SMTP_PORT=25
MAIL_FROM="devops.monitoring@socgen.com"
MAIL_TO="anouar.harrou@socgen.com"

# Fetch server details
latest_paris="$1"
latest_north="$2"
account="$3"

# Function to send an email notification
send_email() {
    local subject="ğŸš¨ Image Mismatch Alert - Region Discrepancy Detected"
    local message="<html>
    <body style='font-family:Arial, sans-serif; background-color:#f4f4f4; padding:20px;'>
        <div style='max-width:600px; margin:auto; background:#ffffff; padding:20px; border-radius:8px; box-shadow:0 0 10px rgba(0,0,0,0.1);'>
            <h2 style='color:#d9534f; text-align:center;'>ğŸš¨ Region Image Mismatch Detected</h2>
            <p style='font-size:14px; text-align:center;'>An inconsistency has been identified in the latest images deployed across regions.</p>
            <hr style='border:0; height:1px; background:#ddd;'>
            <table style='width:100%; font-size:16px; margin-bottom:20px;'>
                <tr>
                    <td style='color:#0275d8; font-weight:bold;'>ğŸ”¹ Account:</td>
                    <td style='color:#07c3ed;'>${account}</td>
                </tr>
            </table>
            <h3 style='color:#d9534f;'>âš ï¸ Mismatch Details:</h3>
            <ul style='font-size:16px; padding-left:20px;'>
                <li>ğŸ“ <b>Paris:</b> <span style='color:#07ed5f; font-weight:bold;'>${latest_paris}</span></li>
                <li>ğŸ“ <b>North:</b> <span style='color:#07ed5f; font-weight:bold;'>${latest_north}</span></li>
            </ul>
            <p style='font-size:14px; color:#333;'>ğŸ” Please review the discrepancy and take necessary actions.</p>
            <hr style='border:0; height:1px; background:#ddd;'>
            <p style='color:#5e5e5e; font-size:12px; text-align:center;'>ğŸ“§ This is an automated notification from the DevOps monitoring system.</p>
        </div>
    </body></html>"

    local temp_file=$(mktemp)

    echo -e "Subject: ${subject}\nContent-Type: text/html; charset=UTF-8\n\n${message}" > "${temp_file}"

    curl -s --url "smtp://${SMTP_HOST}:${SMTP_PORT}" --mail-from "${MAIL_FROM}" --mail-rcpt "${MAIL_TO}" --upload-file "${temp_file}"

    rm -f "${temp_file}"
}

# Execute the email function
send_email