#!/bin/bash

# SMTP configuration
SMTP_HOST="smtp-goss.int.world.socgen"
SMTP_PORT=25
MAIL_FROM="devops.monitoring@socgen.com"
MAIL_TO="anouar.harrou@socgen.com"

# Fetch server details
latest_paris=$1
latest_north=$2
account=$3

# Function to send an email notification
send_email() {
    local subject="Image Mismatch Alert in the Regions"
    local message="<html><body><h3 style='color:red;'>${subject}</h3><h4 style='color:green;'>Account: ${account}</h4><pre>The latest image on Paris (${latest_paris}) differs from North (${latest_north}) ⚠️</pre></body></html>"
    local temp_file=$(mktemp)

    echo -e "Subject: ${subject}\nContent-Type: text/html; charset=UTF-8\n\n${message}" > "${temp_file}"

    curl -s --url "smtp://${SMTP_HOST}:${SMTP_PORT}" --mail-from "${MAIL_FROM}" --mail-rcpt "${MAIL_TO}" --upload-file "${temp_file}"

    rm -f "${temp_file}"
}

# Execute the email function
send_email

=======================================

#!/bin/bash

# Set SMTP details
SMTP_HOST="smtp-goss.int.world.socgen"
SMTP_PORT=25
MAIL_FROM="devops.monitoring@socgen.com"
MAIL_TO="anouar.harrou@socgen.com"

# Read server name from the first argument
SERVER_NAME=$1
ACCOUNT=$2
MISMATCH_DETAILS=$3


# Function to send an email

send_email() {
    local subject="⚠️ Image Mismatch Alert for $SERVER_NAME on ACCOUNT [$ACCOUNT]"
    local message="<html><body><h3 style='color:red;'>$subject</h3><pre>$MISMATCH_DETAILS</pre></body></html>"
    local temp_file=$(mktemp)

    echo -e "Subject: $subject\nContent-Type: text/html; charset=UTF-8\n\n$message" > "$temp_file"
    
    curl -s --url "smtp://$SMTP_HOST:$SMTP_PORT" --mail-from "$MAIL_FROM" --mail-rcpt "$MAIL_TO" --upload-file "$temp_file"
    
    rm -f "$temp_file"
}

send_email
